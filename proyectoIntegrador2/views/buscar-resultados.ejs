<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

	<body>
		<!-- Header -->
			<% if(locals?.user) { %>
				<%- include('./partials/headerLogueado') %>
			<% } else { %>
				<%- include('./partials/header') %>
		<% } %>
		<!-- /Header -->
			<!-- Novedades -->
			<div class="container products-wrapper">
				<div class="row">
					<!-- Show the "ultimos" products -->
					<div class="container products-wrapper">
						<div class="row">
							
							<% if(jugadores.length > 0) { %>
								<div class="col-12">
									<h2 class="products-title">Jugadores encontrados</h2>
								</div>
								<% for(let i = 0; i< jugadores.length; i++) { %>
									<div class="col-12 col-sm-6 col-lg-3">
										<section class="product-box">
											<a href="/productos/detalle/<%= jugadores[i].id %>">
												<figure class="product-box_image">
													<img src="/images/jugadores/<%= jugadores[i].imagen %> " alt="jugadores">
												</figure>
												<article class="product-box_data">
													<h2><%= jugadores[i].nombre %> <%= jugadores[i].apellido %></h2>
													<p><ul>
														<li>
															<strong>Club:</strong><%= jugadores[i].club %> 
														</li>
														<li>
															<strong>Posicion:</strong><%= jugadores[i].posicion %> 
														</li>
														<li>
															<strong>Valor De Mercado:</strong><%= jugadores[i].valor_mercado%> 
														</li>
													</ul></p>
													<p>Comentarios: 5 </p>
												</article>
											</a>
										</section>
									</div>
								<% } %>
							<% } else { %>
								
								<div class="col-12">
									<h2 class="products-title">No hay resultados para su criterio de busqueda</h2>
								</div>
							<% } %>
						</div>
					</div>
					<!-- footer -->
					<%- include('./partials/footer') %>
						<!-- /footer -->
	</body>
</html>