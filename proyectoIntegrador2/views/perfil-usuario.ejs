<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %> 

<body>
	<!-- Header -->
	<%- include('./partials/headerLogueado') %> 
	<!-- /Header -->

	
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/<%= usuario.imagen%>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= usuario.nombre%> <%= usuario.apellido%>
						<a href="">
							<i class="fas fa-cog"></i>
						</a>
					</h1>

                    <% if(locals.user != undefined) { %>
                            <% if(user.id == usuario.id){%> 
                                <a class="btn mt-3 ml-4" href="/users/editar">Editar perfil</a>
                            <% } %> 
                            <% if(user.id != usuario.id && !seguido){%> 
                                <a class="btn mt-3 ml-4" href="/users/seguir/<%= usuario.id%>">Seguir</a>
                            <% } %> 
                            <% if(user.id != usuario.id && seguido){%> 
                                <a class="btn mt-3 ml-4" href="/users/dejarDeSeguir/<%= usuario.id%>">Dejar de seguir</a>
                            <% } %> 
                    <% } %> 
					
				</div>

				<div>
					<ul class="">
						<li><%= usuario.Player.length%> jugadores</li>
						<li><%= usuario.Follower.length%> seguidores</li>
						<li><%= usuario.Comments.length%> comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>

    <% for(let i = 0; i<usuario.Player.length; i++) { %>
        <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">
                <a href="/productos/detalle/<%= usuario.Player[i].id%>">
                    <figure class="product-box_image">
                        <img src="/images/<%= usuario.Player[i].imagen%>" alt="jugadores">
                    </figure>
                    <article class="product-box_data">
                        <h2><%= usuario.Player[i].nombre%> <%= usuario.Player[i].apellido%></h2>
                        <p><ul>
                            <li>
                                <strong>Club:</strong><%= usuario.Player[i].club%> 
                            </li>
                            <li>
                                <strong>Posicion:</strong><%= usuario.Player[i].posicion%> 
                            </li>
                            <li>
                                <strong>Valor De Mercado:</strong><%= usuario.Player[i].valor_mercado%> 
                            </li>
                            
                        </ul></p>
                    </article>
                </a>
            </section>
        </div>
    <% } %>

	<!-- footer -->
	<%- include('./partials/footer') %> 
	<!-- /footer -->
</body>

</html>